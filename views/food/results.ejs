<main>
    <h2>You searched for <%= query %>! Add the ones you like to the menu</h2>
    <div id="results">
        <ul class="ejsLI">
            <% food.foods.forEach(food => { %>
            <li class="nutrientLi">
                <div>
                    <h3 style="margin:10px;padding:10px;"><%= food.description %></h3>
                    <h4>
                        For every 100g, there are:
                    </h4>
                    <% food.foodNutrients.forEach(nutrient => { %>
                        <p>
                            <% if (nutrient.nutrientName == 'Protein') { %>
                                - <%= nutrient.nutrientName %> 
                                <%= nutrient.value %>
                                <%= nutrient.unitName %>
                            <% } %>
                        </p>
                        <p>
                            <% if (nutrient.nutrientName == 'Carbohydrate, by difference') { %>
                                - Carbohydrate  
                                <%= nutrient.value %>
                                <%= nutrient.unitName %>
                            <% } %>
                        </p>
                        <p>
                            <% if (nutrient.nutrientName == `Total lipid (fat)`) { %>
                                - <%= nutrient.nutrientName %>  
                                <%= nutrient.value %>
                                <%= nutrient.unitName %>    
                            <% } %>
                        </p>
                    <% }) %>
                </div>
                <form method="POST" action="/food/lunch" id="nutrientForm">
                    <input type="hidden" name="description" value="<%= food.description%>">
                    <input type="hidden" name="fdcId" value="<%= food.fdcId%>">
                    <button type="submit">Add to Menu</button>
                </form>
                <% }) %>
            </li>
        </ul>
    </div>
</main>